<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>


    <style name="AppTheme.TransStatusBar.Base" parent="AppTheme">
        <!--去除顶部的状态栏-->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AppTheme.AccountActivity" parent="AppTheme">
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
        <item name="android:editTextColor">@color/black_edit</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_18</item>

    </style>

    <style name="AppTheme.TransStatusBar" parent="AppTheme.TransStatusBar.Base"/>


    <style name="AppTheme.MainActivity" parent="AppTheme.TransStatusBar">
        <item name="toolbarTitleColor">@color/colorWhite</item>
        <item name="toolbarMenuIconColor">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhiteDark</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="todoNav">
        <item name="elevation">0dp</item>
        <item name="itemBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemHorizontalTranslationEnabled">true</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:windowElevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:iconTint" tools:ignore="NewApi">@color/colorWhite</item>
    </style>

    <style name="contactNav">
        <item name="elevation">0dp</item>
        <item name="itemBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemHorizontalTranslationEnabled">true</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:windowElevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:iconTint" tools:ignore="NewApi">@color/colorWhite</item>
    </style>


    <style name="settingsTextStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawablePadding">@dimen/len_12</item>
        <item name="android:textColor" >@color/colorPrimary</item>
        <item name="android:paddingTop" >@dimen/len_12</item>
        <item name="android:textSize" >@dimen/font_20</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="AppTheme.AddCreator" parent="AppTheme.TransStatusBar">
        <item name="android:windowBackground">@color/colorWhiteDark</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColorPrimary">@color/stepDialogBack</item>
        <item name="android:editTextColor">@color/stepDialogBack</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:timePickerDialogTheme" tools:targetApi="lollipop">@style/MyDatePickerDialogTheme</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="popup_tool" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">#e2ffffff</item>
    </style>


    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--设置toolbar menu icon的颜色-->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>

    </style>

    <style name="profile_toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--设置toolbar menu icon的颜色-->
        <item name="colorControlNormal">@color/colorWhite</item>

    </style>

    <style name="AppTheme.SearchCreator" parent="AppTheme.TransStatusBar">
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecond</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="isLightTheme">false</item>
    </style>

    <style name="AppTheme.AccountInfoActivity" parent="AppTheme">
        <item name="editTextColor">@color/textSecond</item>
        <item name="actionMenuTextColor">@color/textSecond</item>
        <item name="android:color">@color/textSecond</item>
        <item name="android:colorForeground">@color/textSecond</item>

    </style>

    <style name="AppTheme.Conversation" parent="AppTheme.TransStatusBar">
    </style>

    <style name="TextAppearance.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">?attr/toolbarTitleSize</item>
        <item name="android:textColor">?attr/toolbarTitleColor</item>
    </style>


    <style name="Theme.TimePicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextStyle">@style/Widget.AppCompat.EditText.Gray</item>
    </style>

    <style name="Widget.AppCompat.EditText.Gray">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#b3b3b3</item>
    </style>

</resources>
